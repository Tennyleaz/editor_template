<Window x:Class="editor_template.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:editor_template"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="#BBBBBB" Grid.Column="0"/>
        <WrapPanel Grid.Column="0">
            <Rectangle Fill="#AAAAAA" Width="100" Height="100"/>
            <Rectangle Fill="#777777" Width="100" Height="100"/>
            <Rectangle Fill="#333333" Width="100" Height="100"/>
            <Rectangle Fill="#FF3333" Width="100" Height="100"/>
            <!-- 紅色 -->
            <Rectangle Fill="#00AED8" Width="100" Height="100"/>
            <!-- 藍色 -->
            <Rectangle Fill="#DDDD66" Width="100" Height="100"/>
            <!-- 黃色綠 -->
        </WrapPanel>
    </Grid>
</Window>
